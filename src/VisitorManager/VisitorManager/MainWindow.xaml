<vm:SimpleWindow x:Class="VisitorManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:VisitorManager"
        
        Title="传达室管理系统" Height="768" Width="1024"
        Style="{StaticResource BaseWindow}"
        WindowStartupLocation="CenterScreen"
        Icon="App.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Height="50" Width="100" Content="来防登记" Margin="5,0,5,0">
              
            </Button>
            <Button Height="50" Width="100" Content="访问离开" Margin="5,0,5,0"></Button>
            <Button Height="50" Width="100" Content="综合查询" Margin="5,0,5,0"></Button>
            <Button Height="50" Width="100" Content="统计" Margin="5,0,5,0"></Button>
        </StackPanel>
        
     
    </Grid>
</vm:SimpleWindow>
