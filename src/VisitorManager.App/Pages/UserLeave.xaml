        <Grid Grid.Row="3" Grid.ColumnSpan="3" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="确认离开" Height="30" Width="80" Margin="10,0,10,0"></Button>
                <Button Content="关闭" Height="30" Width="80" Margin="10,0,10,0"></Button>
                <Button Content="保存" Height="30" Width="80" Margin="10,0,10,0"
                            Command="mui:LinkCommands.NavigateLink"
                            CommandParameter="/Pages/Test/Introduction.xaml"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="3">
            <GroupBox Header="来访者列表">

                <DataGrid AutoGenerateColumns="False"   VerticalAlignment="Top" Margin="0,0,0,4" ItemsSource="{Binding Channels}"
                  CanUserSortColumns="False"  IsReadOnly="True"
                  CanUserResizeColumns="True" CanUserResizeRows="False"  SelectionMode="Single"
                  CanUserReorderColumns="False" AlternationCount="2"  RowHeaderWidth="0" CanUserAddRows="False" 
                  SelectedIndex="{Binding SelectedIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"   >
                    <DataGrid.Columns>
                        <DataGridTextColumn  Header="编号" Width="50*" Binding="{Binding }"/>
                        <DataGridTextColumn Header="姓名" Width="50*" Binding="{Binding }" />
                        <DataGridTextColumn Header="证件类型" Width="50*" Binding="{Binding }" />
                        <DataGridTextColumn Header="通行证类型" Width="50*" Binding="{Binding }" />
                        <DataGridTextColumn Header="通行证编号" Width="50*" Binding="{Binding }" />
                        <DataGridTextColumn Header="访问状态" Width="50*"  Binding="{Binding }" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
        
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="被访问者" VerticalAlignment="Center"></TextBlock>
                <ComboBox Height="30" Width="120"></ComboBox>

                <TextBlock Text="访问者" Margin="20,0,0,0" VerticalAlignment="Center"></TextBlock>
                <ComboBox Height="30" Width="120"></ComboBox>

                <Button Content="查找" Height="30" Width="80" Margin="20,0,0,0"></Button>
            </StackPanel>
